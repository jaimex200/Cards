

<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="card"
            type="es.uam.eps.dadm.cards.src.Card" />
        <variable
            name="type"
            type="String" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/list_item_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@{card.question}"
                android:textAppearance="?attr/textAppearanceHeadline6"
                tools:text="Question"/>

            <TextView
                android:id="@+id/list_item_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_question"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:text="@{card.answer}"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="Answer"/>

            <TextView
                android:id="@+id/list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="@{type}"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="type"/>

            <TextView
                android:id="@+id/list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@{card.date.substring(0,10)}"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="Date"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>