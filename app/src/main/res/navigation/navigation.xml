<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="es.uam.eps.dadm.cards.TitleFragment"
        android:label="TitleFragment"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_titleFragment_to_deckListFragment"
            app:destination="@id/deckListFragment" />
    </fragment>
    <fragment
        android:id="@+id/studyFragment"
        android:name="es.uam.eps.dadm.cards.StudyFragment"
        android:label="StudyFragment"
        tools:layout="@layout/fragment_study">
        <argument
            android:name="deckid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/cardListFragment"
        android:name="es.uam.eps.dadm.cards.CardListFragment"
        android:label="CardListFragment"
        tools:layout="@layout/fragment_card_list">
        <action
            android:id="@+id/action_cardListFragment_to_studyFragment"
            app:destination="@id/studyFragment"
            app:launchSingleTop="false" />
        <argument
            android:name="deckid"
            app:argType="string" />
        <action
            android:id="@+id/action_cardListFragment_to_selectCardFragment"
            app:destination="@id/selectCardFragment" />
        <action
            android:id="@+id/action_cardListFragment_to_cardEditFragment"
            app:destination="@id/cardEditFragment" />
        <action
            android:id="@+id/action_cardListFragment_to_clozeEditFragment"
            app:destination="@id/clozeEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardEditFragment"
        android:name="es.uam.eps.dadm.cards.CardEditFragment"
        android:label="CardEditFragment"
        tools:layout="@layout/fragment_card_edit">
        <argument
            android:name="cardid"
            app:argType="string" />
        <action
            android:id="@+id/action_cardEditFragment_to_cardListFragment"
            app:destination="@id/cardListFragment"
            app:popUpTo="@id/cardListFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="deckid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="es.uam.eps.dadm.cards.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/deckListFragment"
        android:name="es.uam.eps.dadm.cards.DeckListFragment"
        android:label="DeckListFragment"
        tools:layout="@layout/fragment_deck_list">
        <action
            android:id="@+id/action_deckListFragment_to_cardListFragment"
            app:destination="@id/cardListFragment" />
        <action
            android:id="@+id/action_deckListFragment_to_deckEditFragment"
            app:destination="@id/deckEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/deckEditFragment"
        android:name="es.uam.eps.dadm.cards.DeckEditFragment"
        android:label="DeckEditFragment"
        tools:layout="@layout/fragment_deck_edit">
        <argument
            android:name="deckid"
            app:argType="string" />
        <action
            android:id="@+id/action_deckEditFragment_to_deckListFragment"
            app:destination="@id/deckListFragment"
            app:popUpTo="@id/deckListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/stadisticFragment"
        android:name="es.uam.eps.dadm.cards.StadisticFragment"
        android:label="StadisticFragment"
        tools:layout="@layout/fragment_stadistic"/>
    <fragment
        android:id="@+id/selectCardFragment"
        android:name="es.uam.eps.dadm.cards.SelectCardFragment"
        android:label="SelectCardFragment"
        tools:layout="@layout/fragment_select_card">
        <argument
            android:name="deckid"
            app:argType="string" />
        <action
            android:id="@+id/action_selectCardFragment_to_cardEditFragment"
            app:destination="@id/cardEditFragment" />
        <action
            android:id="@+id/action_selectCardFragment_to_clozeEditFragment"
            app:destination="@id/clozeEditFragment" />
        <action
            android:id="@+id/action_selectCardFragment_to_optionalEditFragment"
            app:destination="@id/optionalEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/clozeEditFragment"
        android:name="es.uam.eps.dadm.cards.ClozeEditFragment"
        android:label="ClozeEditFragment"
        tools:layout="@layout/fragment_cloze_edit">
        <argument
            android:name="cardid"
            app:argType="string" />
        <argument
            android:name="deckid"
            app:argType="string" />
        <action
            android:id="@+id/action_clozeEditFragment_to_cardListFragment"
            app:destination="@id/cardListFragment" />
    </fragment>
    <fragment
        android:id="@+id/optionalEditFragment"
        android:name="es.uam.eps.dadm.cards.OptionalEditFragment"
        android:label="OptionalEditFragment"
        tools:layout="@layout/fragment_optional_edit">
        <argument
            android:name="cardid"
            app:argType="string" />
        <argument
            android:name="deckid"
            app:argType="string" />
    </fragment>
</navigation>